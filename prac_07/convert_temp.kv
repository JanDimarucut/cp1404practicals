BoxLayout:
    orientation:'vertical'
    BoxLayout:
        orientation:'horizontal'
        size_hint_y: 0.25
        TextInput:
            text: '35'
            id: input_label
            font_size: 48

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25

            Button:
                text: 'Up'
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Convert Celsius to Fahrenheit'
            on_press: app.calculate_celsius_to_fahrenheit()

        Button:
            text: 'Convert Fahrenheit to Celsius'
            on_press: app.calculate_fahrenheit_to_celsius()

        Button:
            text: 'Clear'
            on_press: app.handle_clear()

        Label:
            id: output_label
            text: 'Enter number'
            font_size: 48
            color: (1, 1, 0, 1)