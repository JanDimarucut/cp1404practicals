BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: 0.3
            text: 'Clear'
            on_press: app.handle_clear()

        TextInput:
            id: input_name
            text: ''

    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: 0.3
            text: 'Greet'
            on_press: app.handle_greet()

        Label:
            id: output_label
            text: 'Enter your name'
            color: (1, 1, 0, 1)