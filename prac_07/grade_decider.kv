BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'

        Button:
            size_hint_x: 0.3
            text: 'Calculate'
            on_press: app.handle_grades(int(input_label.text))

        TextInput:
            id: input_label
            text: ''

    BoxLayout:
        orientation: 'horizontal'

        Button:
            size_hint_x: 0.3
            text: 'Clear'
            on_press: app.handle_clear()

        Label:
            id: output_label
            text: 'Enter Grade'
            color: (1, 1, 0, 1)